<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyText"
    tools:context="com.reboot.locately.activity.UserRegistrationActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/dogBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/locately_bg"
                android:scaleType="fitCenter" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.25"
                android:background="@android:color/black" />


            <TextView
                android:id="@+id/App_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/app_name_lcase"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="40sp"
                />


            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@+id/App_Name"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="4dp"
                android:alpha="0.95">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/register"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/textView" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_lName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="90dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:ems="10"
                            android:hint="@string/last_name"

                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/greyText"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mobNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="20dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_toEndOf="@+id/ind"
                            android:layout_toRightOf="@+id/ind"
                            android:ems="10"
                            android:hint="@string/mobile_number"
                            android:inputType="phone"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/greyText"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_fName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"

                        android:layout_alignTop="@+id/textView"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|left"
                            android:ems="10"
                            android:hint="@string/first_name"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/greyText"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/input_layout_mobNo"
                        android:layout_alignLeft="@+id/input_layout_lName"
                        android:layout_alignStart="@+id/input_layout_lName"
                        android:layout_marginBottom="10dp"
                        android:inputType="none"
                        android:text="India (+91)"
                        android:textColorHint="@color/greyText"
                        android:textSize="15sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardView"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="200dp"
                android:layout_toEndOf="@+id/App_Name"
                android:layout_toRightOf="@+id/App_Name"
                android:src="@drawable/ic_arrow_forward_white_24dp" />


        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

